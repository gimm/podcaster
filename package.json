{
  "name": "podcaster",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start -p 9000",
    "dbuild": "docker-compose up -d --build",
    "dstart": "docker-compose up -d",
    "dstop": "docker-compose down",
    "drestart": "docker-compose down && docker-compose up -d",
    "dlogs": "docker-compose logs -f",
    "lint": "next lint",
    "postinstall": "npx playwright install chromium"
  },
  "dependencies": {
    "axios": "^1.8.3",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.7",
    "fs-extra": "^11.3.0",
    "next": "15.2.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "playwright": "^1.51.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4"
  }
}
